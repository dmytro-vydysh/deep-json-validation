{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "ES2020"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}